---
import '@fontsource/inter/greek-400.css';
import '@fontsource/inter/latin-400.css';
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Inter';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    /* --aw-color-primary: rgb(0 83 135); */
    --aw-color-primary: rgb(0 0 0);
    --aw-color-secondary: rgb(0, 68, 255);
    --aw-color-accent: rgb(255, 115, 0);
    --aw-color-text-page: rgb(17 24 39);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(255 255 255);
    --aw-offwhite-bg-page: rgb(248 248 248);
  }
</style>

---
export interface Props {
  text: string;
  url: string | URL;
  class?: string;
}

const { text, url, class: className = "inline-block" } = Astro.props;
---

<div class={className}>
  <span class="align-super font-bold text-gray-400 dark:text-slate-400"
    >Share:</span
  >
  <button
    class="ml-2"
    title="Twitter Share"
    data-aw-social-share="twitter"
    data-aw-url={url}
    data-aw-text={text}
    ><i
      class="fa-brands fa-x-twitter text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    >
    </i>
  </button>
  <button
    class="ml-2"
    title="Facebook Share"
    data-aw-social-share="facebook"
    data-aw-url={url}
    ><i
      class="fa-brands fa-facebook text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    ></i>
  </button>
  <button
    class="ml-2"
    title="Linkedin Share"
    data-aw-social-share="linkedin"
    data-aw-url={url}
    data-aw-text={text}
    ><i
      class="fa-brands fa-linkedin text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    ></i>
  </button>
  <button
    class="ml-2"
    title="Whatsapp Share"
    data-aw-social-share="whatsapp"
    data-aw-url={url}
    data-aw-text={text}
    ><i
      class="fa-brands fa-whatsapp text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    ></i>
  </button>
  <button
    class="ml-2"
    title="Email Share"
    data-aw-social-share="mail"
    data-aw-url={url}
    data-aw-text={text}
    ><i
      class="fa-regular fa-envelope text-gray-400 dark:text-slate-500 hover:text-black dark:hover:text-slate-300"
    ></i>
  </button>
</div>

<div
    class="banner bg-gradient-to-r from-gray-400 to-gray-700 dark:from-orange-400 dark:to-orange-700 text-white px-4 py-3 flex justify-center items-center relative"
>
  {/* Static snowflakes with pure CSS animation */}
  <div class="snowflakes" aria-hidden="true">
    <div class="snowflake">❅</div>
    <div class="snowflake">❆</div>
    <div class="snowflake">❅</div>
    <div class="snowflake">❆</div>
    <div class="snowflake">❅</div>
    <div class="snowflake">❆</div>
    <div class="snowflake">❅</div>
    <div class="snowflake">❆</div>
    <div class="snowflake">❅</div>
    <div class="snowflake">❆</div>
  </div>

  <div class="flex items-center space-x-3 z-10 relative">
    <i class="fa-solid fa-tree"></i>
    <div class="text-center">
      <span class="font-semibold">Christmas Break 2024:</span> 24 - 31/12
    </div>
  </div>
</div>

<style>
  .banner {
    height: 48px;
    overflow: hidden;
  }

  .snowflakes {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }

  .snowflake {
    color: white;
    position: absolute;
    top: -10px;
    animation: snowfall linear infinite;
    text-shadow: 0 0 2px rgba(255,255,255,0.6);
    user-select: none;
  }

  /* Different positions and delays for each snowflake */
  .snowflake:nth-child(1) { left: 10%; animation-duration: 3s; animation-delay: 0s; }
  .snowflake:nth-child(2) { left: 20%; animation-duration: 3.5s; animation-delay: 0.5s; }
  .snowflake:nth-child(3) { left: 30%; animation-duration: 2.8s; animation-delay: 1s; }
  .snowflake:nth-child(4) { left: 40%; animation-duration: 3.2s; animation-delay: 1.5s; }
  .snowflake:nth-child(5) { left: 50%; animation-duration: 3.7s; animation-delay: 0.2s; }
  .snowflake:nth-child(6) { left: 60%; animation-duration: 3s; animation-delay: 0.7s; }
  .snowflake:nth-child(7) { left: 70%; animation-duration: 3.4s; animation-delay: 1.2s; }
  .snowflake:nth-child(8) { left: 80%; animation-duration: 3.1s; animation-delay: 0.3s; }
  .snowflake:nth-child(9) { left: 90%; animation-duration: 3.6s; animation-delay: 0.8s; }
  .snowflake:nth-child(10) { left: 95%; animation-duration: 3.3s; animation-delay: 1.3s; }

  @keyframes snowfall {
    0% {
      transform: translateY(-10px) rotate(0deg);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    100% {
      transform: translateY(48px) rotate(360deg);
      opacity: 0;
    }
  }
</style>
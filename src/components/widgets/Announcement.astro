---
import { Icon } from 'astro-icon';
---

<div class="bg-gradient-to-r from-gray-400 to-gray-700 dark:from-orange-400 dark:to-orange-700 text-white px-4 py-3 flex justify-center items-center">
  <!-- Wrapping container for the icon and text, centered using flex on the parent container -->
  <div class="flex items-center space-x-3">
    <!-- Icon next to the text -->
    <Icon
      name="fxemoji:palmtree"
      class="w-6 h-6"
    />

    <!-- Text content -->
    <div class="text-center">
      <a href="/assets/summer-vacation.webp" class="hover:underline">
        <span class="font-semibold">Summer Break 2023:</span> 11/8 to 2/9
      </a>
    </div>
  </div>
</div>

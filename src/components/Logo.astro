---
import { Image } from "astro:assets";
import logoImage from "../assets/images/the-kitchen-studio-logo-header.avif";

const { placement } = Astro.props;
const isHeader = placement === "header";
---

<span class="self-center ml-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
  <Image
    src={logoImage}
    alt="the-kitchen-studio-logo"
    height="73"
    width="125"
    densities={[1, 2, 3]}
    class={`tks-logo-image ${placement} rounded-xl`}
    format="avif"
    loading={isHeader ? "eager" : "lazy"}
    fetchpriority={isHeader ? "high" : "auto"}
  /></span
>

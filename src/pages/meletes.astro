---
import Carousel from "../components/widgets/Carousel.astro";
import PageDescription from "../components/widgets/PageDescription.astro";
import Spacer from "../components/widgets/Spacer.astro";
import Layout from "../layouts/PageLayout.astro";

import meletesImage from "../assets/images/meletes/meletes.avif";
import meletes1Image from "../assets/images/meletes/meletes-1.avif";
import meletes2Image from "../assets/images/meletes/meletes-2.avif";
import meletes3Image from "../assets/images/meletes/meletes-3.avif";
import meletes4Image from "../assets/images/meletes/meletes-4.avif";
import meletes5Image from "../assets/images/meletes/meletes-5.avif";
import meletes6Image from "../assets/images/meletes/meletes-6.avif";
import meletes8Image from "../assets/images/meletes/meletes-8.avif";
import meletes9Image from "../assets/images/meletes/meletes-9.avif";
import meletes10Image from "../assets/images/meletes/meletes-10.avif";
import meletes11Image from "../assets/images/meletes/meletes-11.avif";
import meletes12Image from "../assets/images/meletes/meletes-12.avif";

const meta = {
  title: "Μελέτες",
  description: "Εξερευνήστε τις μελέτες μας",
};
---

<Layout meta={meta}>
  <div class="content-container">
    <PageDescription
      title="Μελέτες"
      subtitle="Εξερευνήστε τις μελέτες μας"
      description="Οι μελέτες μας διακατέχονται από προσεκτική σχεδίαση και σκέψη, λαμβάνοντας υπόψη τόσο την αισθητική όσο και τη λειτουργικότητα του χώρου."
    />

    <Carousel
      images={[
        {
          src: meletesImage,
          alt: "meletes",
        },
        {
          src: meletes1Image,
          alt: "meletes-1",
        },
        {
          src: meletes2Image,
          alt: "meletes-2",
        },
        {
          src: meletes3Image,
          alt: "meletes-3",
        },
        {
          src: meletes4Image,
          alt: "meletes-4",
        },
        {
          src: meletes5Image,
          alt: "meletes-5",
        },
        {
          src: meletes6Image,
          alt: "meletes-6",
        },
        {
          src: meletes8Image,
          alt: "meletes-8",
        },
        {
          src: meletes9Image,
          alt: "meletes-9",
        },
        {
          src: meletes10Image,
          alt: "meletes-10",
        },
        {
          src: meletes11Image,
          alt: "meletes-11",
        },
        {
          src: meletes12Image,
          alt: "meletes-12",
        },
      ]}
      widthType="normal"
    />
  </div>

  <Spacer />
</Layout>

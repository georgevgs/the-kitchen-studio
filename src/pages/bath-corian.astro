      images={[
        {
          src: "/assets/bath/corian/corian-bathroom-sink.avif",
          alt: "corian-bathroom-sink",
        },
        {
          src: "/assets/bath/corian/corian-bathroom-sink-2.avif",
          alt: "corian-bathroom-sink",
        },
        {
          src: "/assets/bath/corian/corian-bathroom-sink-3.avif",
          alt: "corian-bathroom-sink",
        },
        {
          src: "/assets/bath/corian/corian-bathroom-sink-4.avif",
          alt: "corian-bathroom-sink",
        },
        {
          src: "/assets/bath/corian/corian-bathroom-sink-5.avif",
          alt: "corian-bathroom-sink",
        },
        {
          src: "/assets/bath/corian/corian-bathroom-sink-6.avif",

---
import { SITE } from "../../config.mjs";
import Layout from "../../layouts/PageLayout.astro";
import { t, changeLanguage } from "i18next";
import modernKitchenImage from "../../assets/images/home-images/modern-kitchen-home.avif";
import modernKitchenImage2 from "../../assets/images/home-images/modern-kitchen-home-2.avif";
import classicKitchenImage from "../../assets/images/home-images/classic-kitchen-home.avif";
import classicKitchenImage2 from "../../assets/images/home-images/classic-kitchen-home-2.avif";
import wardrobeImage from "../../assets/images/home-images/wardrobe-home.avif";
import wardrobeImage2 from "../../assets/images/home-images/wardrobe-home-2.avif";
import wardrobeImage3 from "../../assets/images/home-images/wardrobe-home-3.avif";
import bedroomBedImage from "../../assets/images/home-images/bedroom-bed-home.avif";
import modernBathroomImage from "../../assets/images/home-images/modern-bathroom-home.avif";
import modernBathroomViewImage from "../../assets/images/home-images/modern-bathroom-view-home.avif";
import showroomBWImage from "../../assets/images/showroom/the-kitchen-studio-showroom-bw.avif";
import Features from "../../components/widgets/Features.astro";
import Features2 from "../../components/widgets/Features2.astro";
import Steps from "../../components/widgets/Steps.astro";
import FAQs from "../../components/widgets/FAQs.astro";
import Stats from "../../components/widgets/Stats.astro";
import CallToAction from "../../components/widgets/CallToAction.astro";
import Carousel from "../../components/widgets/Carousel.astro";
import { getPermalink } from "../../utils/permalinks";
import { localizePath } from "astro-i18next";

changeLanguage("en");

const lang = "EN";
const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta} lang={lang}>
  <!-- Carousel Widget *************** -->

  <Carousel

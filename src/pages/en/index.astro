        alt: "modern-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/7f968dae-4c5c-4c03-f174-75f39d4b5900/public",
        alt: "modern-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/ed4f4698-e069-45dc-fe55-4e5310d7d500/public",
        alt: "modern-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/65ddfe78-8ac7-4632-f627-6c48ed31ce00/public",
        alt: "modern-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/edd5d5d9-f4e2-4f98-155c-963a27b72b00/public",
        alt: "modern-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/b3834b98-c051-4322-3894-ae6021e4ce00/public",
        alt: "classic-kitchen-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/b52ee538-98e9-4270-8c2b-91abe97cdf00/public",
        alt: "modern-bathroom-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/720bd352-1d4b-459a-58ad-56404e4bbf00/public",
        alt: "living-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/66177c8a-e4cc-471d-a621-e830a58b4c00/public",
        alt: "modern-bathroom-home",
      },
      {
        src: "https://imagedelivery.net/-ib8k9ko2H9nz4rN9weyCg/767aa375-9a0f-4212-0f38-d211638c5a00/public",
        alt: "bedroom-wardrobe",
      },
    ]}
    widthType="full-width"
  />

  <!-- Features Widget *************** -->

  <Features
    highlight={t("home.features.highlight")}
    title=""
    subtitle={t("home.features.subtitle")}
    items={[
      [
        {
          title: t("home.features.items.first_title"),
          description: "",
          icon: "fa-solid fa-chair",
        },
        {
          title: t("home.features.items.second_title"),
          description: "",
          icon: "fa-solid fa-hourglass",
        },
        {
          title: t("home.features.items.third_title"),
          description: "",
          icon: "fa-solid fa-tag",
        },
      ],
      [
        {
          title: t("home.features.items.fourth_title"),
          description: "",
          icon: "fa-solid fa-arrow-up",
        },
        {
          title: t("home.features.items.fith_title"),
          description: "",
          icon: "fa-solid fa-headset",
        },
      ],
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title={t("home.steps.title")}
    items={[
      {
        title: t("home.steps.items.first_item.title"),
        description: t("home.steps.items.first_item.description"),
        icon: "fa-solid fa-tape",
      },
      {
        title: t("home.steps.items.second_item.title"),
        description: t("home.steps.items.second_item.description"),
        icon: "fa-solid fa-pencil",
      },
      {
        title: t("home.steps.items.third_item.title"),
        description: t("home.steps.items.third_item.description"),
        icon: "fa-solid fa-screwdriver-wrench",
      },
      {
        title: t("home.steps.items.fourth_item.title"),
        icon: "fa-solid fa-check",
      },
    ]}
    image={{
      src: showroomBWImage,
      alt: "the-kitchen-studio-showroom",
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("home.features2.title")}
    subtitle=""
    highlight={t("home.features2.highlight")}
    items={[
      {
        title: t("home.features2.items.first_item.title"),
        description: t("home.features2.items.first_item.description"),
        icon: "fa-solid fa-fire-burner",
        href: localizePath("/kitchens"),
      },
      {
        title: t("home.features2.items.second_item.title"),
        description: t("home.features2.items.second_item.description"),
        icon: "fa-solid fa-bath",
        href: localizePath("/bath"),
      },
      {
        title: t("home.features2.items.third_item.title"),
        description: t("home.features2.items.third_item.description"),
        icon: "fa-solid fa-table-cells",
        href: localizePath("/tiles"),
      },
      {
        title: t("home.features2.items.fourth_item.title"),
        description: t("home.features2.items.fourth_item.description"),
        icon: "fa-solid fa-shirt",
        href: localizePath("/wardrobes"),
      },
      {
        title: t("home.features2.items.fith_item.title"),
        description: t("home.features2.items.fith_item.description"),
        icon: "fa-solid fa-door-closed",
        href: localizePath("/doors"),
      },
      {
        title: t("home.features2.items.sixth_item.title"),
        description: t("home.features2.items.sixth_item.description"),
        icon: "fa-solid fa-couch",
        href: localizePath("/living"),
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title={t("home.faq.title")}
    ,
    subtitle=""
    highlight=""
    items={[
      [
        {
          question: t("home.faq.items.first_item.question"),
          answer: t("home.faq.items.first_item.answer"),
        },
        {
          question: t("home.faq.items.second_item.question"),
          answer: t("home.faq.items.second_item.answer"),
        },
      ],
      [
        {
          question: t("home.faq.items.third_item.question"),
          answer: t("home.faq.items.third_item.answer"),
        },
        {
          question: t("home.faq.items.fourth_item.question"),
          answer: t("home.faq.items.fourth_item.answer"),
        },
      ],
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    items={[
      { name: t("home.stats.first_stat"), value: "1K" },
      { name: t("home.stats.second_stat"), value: "250" },
      { name: t("home.stats.third_stat"), value: "800" },
      { name: t("home.stats.fourth_stat"), value: "âˆž" },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: t("home.call_to_action.text"),
      href: "/assets/leaflets/the-kitchen-studio-leaflet-v1.pdf",
      icon: "tabler:download",
    }}
  >
    <Fragment slot="title">{t("home.call_to_action.title")}</Fragment>

    <Fragment slot="subtitle">{t("home.call_to_action.subtitle")}</Fragment>
  </CallToAction>
</Layout>

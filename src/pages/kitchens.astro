---
import Category from "../components/widgets/Category.astro";
import PageDescription from "../components/widgets/PageDescription.astro";
import Spacer from "../components/widgets/Spacer.astro";
import Layout from "../layouts/PageLayout.astro";
import { getPermalink } from "./../utils/permalinks";

import modernKitchenImage from '../assets/images/kitchens/modern/modern-kitchen.avif';
import classicKitchenImage from '../assets/images/kitchens/classic/classic-kitchen-5.avif';
import corianKitchenImage from '../assets/images/kitchens/corian/corian-kitchen-countertop.avif';

const meta = {
  title: "Kitchens",
  description:
    "Ανακαλύψτε μοναδικά σχέδια κουζινών: μοντέρνες, κλασικές και Corian. Επαναπροσδιορίστε τον χώρο σας με εκλεπτυσμένα έπιπλα κουζίνας που συνδυάζουν λειτουργικότητα και αισθητική.",
};
---

<Layout meta={meta}>
  <div class="category-container">
    <PageDescription
      title="Kitchens"
      subtitle="Σύγχρονες λιτές γραμμές και υψηλής τεχνολογίας υλικά"
      description="Ανακαλύψτε μοναδικά σχέδια κουζινών: μοντέρνες, κλασικές και Corian. Επαναπροσδιορίστε τον χώρο σας με εκλεπτυσμένα έπιπλα κουζίνας που συνδυάζουν λειτουργικότητα και αισθητική."
    />

    <Category
      categories={[
        {
          text: "Modern Kitchens",
          href: getPermalink("/kitchens/modern-kitchens"),
          src: modernKitchenImage,
          alt: "modern-kitchens",
        },
        {
          text: "Classic Kitchens",
          href: getPermalink("/kitchens/classic-kitchens"),
          src: classicKitchenImage,
          alt: "classic-kitchens",
        },
        {
          text: "Corian Kitchens",
          href: getPermalink("/kitchens/corian-kitchens"),
          src: corianKitchenImage,
          alt: "corian-kitchens",
        },
      ]}
      widecategory={false}
    />
  </div>

  <Spacer />
</Layout>

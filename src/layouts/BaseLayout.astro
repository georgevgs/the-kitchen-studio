---
import "@fortawesome/fontawesome-free/css/all.min.css";
import MetaTags from "./../components/common/MetaTags.astro";
import BasicScripts from "./../components/common/BasicScripts.astro";
import { type MetaSEO } from "./../types";
import { SITE } from "./../config.mjs";

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = "el", textDirection = "ltr" } = SITE;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
    <link rel="preload" href="/assets/styles/base.css" as="style" />
    <link
      rel="stylesheet"
      href="/assets/styles/base.css"
      media="print"
      onload="this.media='all'"
    />
    <noscript><link rel="stylesheet" href="/assets/styles/base.css" /></noscript
    >
    <style>
      body {
        display: none;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.body.style.display = "block";
      });
    </script>
  </head>
  <body
    class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-dark"
  >
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
